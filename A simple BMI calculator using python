name = input('Enter your name')
weight = int(input('Enter your weight in Kilograms (approximate) : '))
Height = int(input('Enter your height in metres (approximate): '))
BMI = (weight) / (Height * Height)
print(BMI)
if BMI>0:
    if   (BMI<18.5):
        print(name + ', you are underweight')
    elif (BMI<=24.9):
        print(name + ', you are heathly weight')
    elif (BMI<=29.9):
        print(name + ', you are overweight')
    else:
        print(name + ', you are obese')
else:
    print('Enter valid input')
